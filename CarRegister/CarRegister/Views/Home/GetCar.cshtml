@model Car

<h2>Edit Car</h2>

<form asp-controller="Home" asp-action="Edit" method="post">
    <div class="row">
        <div class="col-6">
            <label asp-for="@Model.Brand">Brand</label>
            <input class="form-control" asp-for="@Model.Brand" />
        </div>
        <div class="col-6">
            <label asp-for="@Model.Model">Model</label>
            <input class="form-control" asp-for="@Model.Model" />
        </div>
    </div>
    <input hidden asp-for="@Model.Id" />
    <hr />
    <div class="row">
        <div class="col-6">
            <label asp-for="@Model.Seats">Seats</label>
            <input class="form-control" asp-for="@Model.Seats" />
        </div>
        <div class="col-6">
            <label asp-for="@Model.ReleaseDate">Release Date</label>
            <input class="form-control" asp-for="@Model.ReleaseDate" />
        </div>
    </div>
    <br />
    <button class="btn btn-primary">Save Changes</button>
</form>
<br />
<button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal">
    Delete
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete @Model.Brand</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure, you want to delete @Model.Brand @Model.Model
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Go back</button>
                <button onclick="deleteCar()" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<script>
    function deleteCar() {
        window.location = '/Home/Delete?carId=' + @Model.Id
}
</script>